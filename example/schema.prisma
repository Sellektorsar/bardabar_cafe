model User {
  id      String  @id @default(cuid())
  isAdmin Boolean @default(false)
}

model MenuCategory {
  id        String     @id @default(cuid())
  name      String
  order     Int        @default(0)
  menuItems MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id          String       @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  articleCode String?      @unique
  category    MenuCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model News {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactRequest {
  id        String   @id @default(cuid())
  name      String
  phone     String
  message   String?
  type      String   @default("table") // table, banquet, etc.
  createdAt DateTime @default(now())
}

model Staff {
  id          String   @id @default(cuid())
  name        String
  position    String
  description String?
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AdminCredentials {
  id       String @id @default(cuid())
  password String
}

model AboutContent {
  id         String   @id @default(cuid())
  title      String   @default("О нас")
  content    String
  advantages String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}